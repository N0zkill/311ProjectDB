<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="viewmodel.SignUpController" style="-fx-padding: 20;" alignment="CENTER" hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="CENTER" />
    </rowConstraints>

    <!-- Title -->
    <Label text="Sign Up" style="-fx-font-size: 24px; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER" />

    <!-- Username Field -->
    <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER_RIGHT" />
    <TextField fx:id="usernameField" promptText="Enter Username" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <!-- Password Field -->
    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" alignment="CENTER_RIGHT" />
    <PasswordField fx:id="passwordField" promptText="Enter Password" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <!-- Buttons -->
    <HBox GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER" spacing="10">
        <Button text="Create Account" onAction="#createNewAccount" />
        <Button text="Back" onAction="#goBack" />
    </HBox>
</GridPane>
